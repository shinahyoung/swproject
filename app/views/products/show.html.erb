<div class="row">
    <div class="col-md-1">
        </div>
            <div class="col-md-5 text-right">
<img src="<%= @post.image_url(:medium) %>">
</div>
<div class="col-md-5">

<h3><%= @post.title %></h3>
    <p><%= @post.content %></p>
    <hr>

	<div class="table-opt">
	 <table summary="판매 가격, 적립금, 주문 수량, 옵션">
	 <tbody>	
	  <tr >
	     <th scope="row" width="100dp" height="30dp">price</th>
       <td>    <%b=@post.price.to_s.split('')%>
           <%c=""%>
           <%i=0%>
         <%for d in b.reverse%>
           <%if i%3==0&&i!=0%>
             <%c=','+c%>
           <%end%>
           <%c=d+c%>
           <%i=i+1%>
         <%end%>
         <%=c=%> 
       
 	  </tr>
	  <tr>
	     <th scope="row" height="30dp">point</th>
	     <td>
            <%b=@post.point.to_s.split('')%>
            <%c=""%>
            <%i=0%>
            <%for d in b.reverse%>
               <%if i%3==0&&i!=0%>
               <%c=','+c%>
               <%end%>
               <%c=d+c%>
            <%i=i+1%>
            <%end%>
            <%=c=%>
         
         </td>
	  </tr>
          <tr>
             <th scope="row" height="30dp">option</th>
	     <td>
            <select name="option_menu">
            <option value="">--옵션선택--</option>
            <% for a in @post.options.split("\n")%>
            <option value=<%a%>><%=a=%></option> 
            <%end%>
            </select>
            
           
  	     </td>
          </tr>
	  <tr>
                <th scope="row" height="30dp">qty</th>
		<td>
		  <div class="opt-btns">
                    <input type="text" id="goods_amount" name="amount" value="1" size="4" style="text-align: right;"  />                                                        <a href="javascript:CountChange('up');"><img class="btn-up" src="/design/babirolen/201502/contents/de_up.gif" alt="수량증가" title="수량증가" /></a>
      <a href="javascript:CountChange('down');"><img class="btn-dw" src="/design/babirolen/201502/contents/de_down.gif" alt="수량감소" title="수량감소" /></a>
                  </div>

		</td>
          </tr>

	  <tr>
		<th scope="row">delivery</th>
		<td> 국내, 해외 배송 가능</td>
	  </tr>

	 </tbody>
	</table>
	</div><!-- .table-opt -->


	<% if @user == 1 %>
        <p><a href="/products/edit/<%= @post.id %>">수정</a> | <a href="/products/delete_complete/<%= @post.id %>">삭제</a></p>
<% end %>



<hr>
	<div class="btn-group btn-group-justified" role="group" aria-label="...">
	  <div class="btn-group" role="group">
	    <button type="button" class="btn btn-default">BUT IT NOW</button>
	  </div>
	  <div class="btn-group" role="group">
	    <button type="button" class="btn btn-default">ADD TO WISH LIST</button>
	  </div>
	  <div class="btn-group" role="group">
	    <button type="button" class="btn btn-default">ADD TO CART</button>
	  </div>
	</div>


        </div><div class="col-md-1">
        </div>
        </div>
        
</div>
