<%if @buy!=nil %>
<table cellspacing="1" text-align=center align="center" width=800 border=1 rules="none" frame="hsides" summary="번호 사진 제품명 수량 적립 가격">
 <COLGROUP>
 <COL width="20%">
 <COL width="10%">
 <COL width="10%">
