 <COL width="10%"></COLGROUP>

  <TR>
    <td><p align=center>ITEM</p>
    </td>
    <td><p align=center>PRICE</p>
    </td>
    <td><p align=center>POINT</p>
    </td>
    <td><p align=center>QTY</p>
    </td>
    <td><p align=center>OPTION</p>
    </td>
  </TR>
<% @buy.reverse.each do |post|%>
